@model EditProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<h1>@ViewData["Title"]</h1>
    <hr />

<form asp-action="EditProfile" method="post">
    @* We nust send id with model here *@
    <input type="hidden" asp-for="Id" />

    <div class="form-floating">
        <input asp-for="Id" class="form-control" disabled/>
        <label asp-for="Id"></label>
    </div>

    <div class="form-floating">
        <input asp-for="FirstName" class="form-control" maxlength="100" />
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="LastName" class="form-control" maxlength="100" />
        <label asp-for="LastName"></label>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="Username" class="form-control" maxlength="100" />
        <label asp-for="Username"></label>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <hr>

    <button type="submit" class="w-100 btn btn-lg btn-primary d-block mt-4">Save</button>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}